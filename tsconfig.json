{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/*"
      ],
      "@components/*": [
        "resources/vue/components/*"
      ],
      "@pages/*": [
        "resources/vue/pages/*"
      ],
      "@layouts/*": [
        "resources/vue/layouts/*"
      ]
    }
  },
  "include": [
    "resources/**/*"
  ]
}
